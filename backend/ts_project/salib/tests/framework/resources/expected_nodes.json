    {
      "type": "SimpleThreshold",
      "desc": "Detect values outside of bounds",
      "display": "Simple Threshold",
      "params": [
        {
          "id": "inside",
          "type": "Boolean",
          "display": "Inside",
          "desc": "If true, value must be within bounds",
          "conditions": [],
          "value": false
        },
        {
          "id": "strict",
          "type": "Boolean",
          "display": "Strict",
          "desc": "Strict comparison on bounds",
          "conditions": [],
          "value": false
        },
        {
          "id": "lower",
          "type": "Float",
          "display": "Lower",
          "desc": "Lower bound",
          "conditions": [],
          "value": null
        },
        {
